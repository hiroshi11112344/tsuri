<div class="content-wrapper">
  <div class="main-content">
    <!-- タイトル表示（将来的に @post.title にデータが入る想定） -->
    <div class="post-title">
      <%= @post.title.presence || "（タイトル未設定）" %>
    </div>

    <section>
      <% (1..10).each do |i| %>
        <% image = @post.send("image#{i}") %>
        <% content = @post.send("content#{i}") %>

        <% if (image.respond_to?(:attached?) && image.attached?) || content.present? %>
          <figure>
            <figcaption>画像<%= i %></figcaption>

            <% if image.respond_to?(:attached?) && image.attached? %>
              <%= image_tag image %>
            <% end %>

            <% if content.present? %>
              <p><%= content %></p>
            <% end %>
          </figure>
        <% end %>
      <% end %>
    </section>
  </div>

  <aside class="sidebar">
    <!-- 今は空でもOK。将来的にプロフィールや広告など入れる想定 -->
  </aside>
</div>